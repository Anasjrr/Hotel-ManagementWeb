@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
           
        }

        .hero-section {
            background: url('../images/home.png') center/cover no-repeat;
            color: white;
            text-align: center;
            padding: 155px 20px;
           margin:0;
        }

        .hero-section h1 {
            font-size: 3rem;
        }

        .about-section, .contact-section {
            padding: 60px 20px;
        }

        .footer {
            background-color: #333;
            color: white;
            text-align: center;
       
        
             position: absolute;
  bottom: 0;
  width: 100%;
  white-space: nowrap;
  line-height: 40px;
        }

        .btn-book {
            background-color: #007BFF;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }
    </style>
</head>
<body>
  
    <section class="hero-section">
        <h1>Mimouna Luxury Hotel & Spa</h1>
        <p>Experience unmatched luxury and comfort.</p>
        <a href="#rooms" class="btn btn-book">Book Now</a>
    </section>

   
    <section class="about-section bg-light">
        <div class="container">
            <h2>About Us</h2>
            <p>Located in the heart of the city, Holan Luxury Hotel & Spa offers the finest accommodations and services for both leisure and business travelers.</p>
            <a href="#location" class="btn btn-primary">Learn More</a>
        </div>
    </section>

    <section id="rooms" class="py-5">
        <div class="container">
            <h2 class="text-center">Our Rooms</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img src="../images/room1.png" class="card-img-top" alt="Deluxe Room">
                        <div class="card-body">
                            <h5 class="card-title">Deluxe Room</h5>
                            <p>$200/night - Perfect for relaxation.</p>
                            <a href="#" class="btn btn-primary">Book Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="../images/room2.png" class="card-img-top" alt="Suite">
                        <div class="card-body">
                            <h5 class="card-title">Suite</h5>
                            <p>$400/night - Experience luxury at its finest.</p>
                            <a href="#" class="btn btn-primary">Book Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="../images/room4.png" class="card-img-top" alt="Family Room">
                        <div class="card-body">
                            <h5 class="card-title">Family Room</h5>
                            <p>$300/night - Perfect for family vacations.</p>
                            <a href="#" class="btn btn-primary">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section bg-light">
        <div class="container">
            <h2>Contact Us</h2>
            <form>
                <div class="row mb-3">
                    <div class="col">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="firstName">
                    </div>
                    <div class="col">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="lastName">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 Mimouna Luxury Hotel. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
