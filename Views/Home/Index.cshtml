@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
           
        }

        .hero-section {
            background: url('../images/home.png') center/cover no-repeat;
            color: white;
            text-align: center;
            padding: 155px 20px;
           margin:0;
        }

        .hero-section h1 {
            font-size: 3rem;
        }

        .about-section, .contact-section {
            padding: 60px 20px;
        }

        .footer {
            background-color: #333;
            color: white;
            text-align: center;
       
        
             position: absolute;
  bottom: 2;
  width: 100%;
  white-space: nowrap;
  line-height: 40px;
        }

        .btn-book {
            background-color: #007BFF;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
        }
    </style>
</head>
<body>
  
    <section class="hero-section">
        <h1 class="text-2xl fw-bold ">Mimouna Luxury Hotel & Spa</h1>
        <p class="text-xl fw-bold ">Experience unmatched luxury and comfort.</p>
        <a href="#rooms" class="btn btn-book">Book Now</a>
    </section>

   
  <section class="text-gray-700 border-top border-gray-200 bg-light">
  <div class="container py-5">
    <div class="row g-4">
      <!-- Image Column -->
      <div class="col-md-6">
        <div class="p-4">
          <img src="../images/home.png" alt="Room Image" class="rounded img-fluid h-100 w-100">
        </div>
      </div>
      <!-- Content Column -->
      <div class="col-md-6">
        <div class="d-flex flex-column h-100 justify-content-center mt-md-2">
          <h2 class="text-2xl fw-bold text-primary">Start a vacation in our hotel</h2>
          <br />
          <p class="mb-4">
            It really matters and then like it really doesn’t matter. What matters is the people who are sparked by it. And the people who are like offended by it, it doesn’t matter. Because it's about motivating the doers. Because I’m here to follow my dreams and inspire other people to follow their dreams, too.
            It really matters and then like it really doesn’t matter. What matters is the people who are sparked by it. And the people who are like offended by it, it doesn’t matter. Because it's about motivating the doers. Because I’m here to follow my dreams and inspire other people to follow their dreams, too.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>


    <section id="rooms" class="py-5">
        <div class="container">
            <h2 class="text-2xl fw-bold text-primary mb-4 text-center">Our Rooms</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img src="../images/room1.png" class="card-img-top" alt="Deluxe Room">
                        <div class="card-body">
                            <h5 class="card-title">Deluxe Room</h5>
                            <p>$200/night - Perfect for relaxation.</p>
                             @if (ViewBag.IsAuthenticated)
            {
                <a href="Reservation" class="btn btn-primary">Book Now</a>
            }
            else
            {
               <a href="User/login" class="btn btn-primary">Book Now</a>
            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="../images/room2.png" class="card-img-top" alt="Suite">
                        <div class="card-body">
                            <h5 class="card-title">Suite</h5>
                            <p>$400/night - Experience luxury at its finest.</p>
                             @if (ViewBag.IsAuthenticated)
            {
                <a href="Reservation" class="btn btn-primary">Book Now</a>
            }
            else
            {
                <a href="User/login" class="btn btn-primary">Book Now</a>
            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img src="../images/room4.png" class="card-img-top" alt="Family Room">
                        <div class="card-body">
                            <h5 class="card-title">Family Room</h5>
                            <p>$300/night - Perfect for family vacations.</p>
                            <a href="#" class="btn btn-primary">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section bg-light mb-12">
        <div class="container mb-12">
            <h2 class="text-2xl fw-bold text-primary text-center mb-4">Contact Us</h2>
            <form asp-action="AddContactUs" method="post">
                @Html.AntiForgeryToken()
                <div class="row mb-3">
                    <div class="col">
                        <label for="FirstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="FirstName" name="FirstName">
                    </div>
                    <div class="col">
                        <label for="LastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="LastName" name="LastName">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email">
                </div>
                <div class="mb-3">
                    <label for="Message" class="form-label">Message</label>
                    <textarea class="form-control" id="Message" name="Message" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mb-12">Sent</button>
            </form>
        </div>
    </section>

    <footer class="footer mt-4">
        <p>&copy; 2024 Mimouna Luxury Hotel. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
